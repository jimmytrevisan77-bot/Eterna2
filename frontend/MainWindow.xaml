<Window x:Class="Eterna.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eterna.Desktop"
        mc:Ignorable="d"
        Title="Eternadream Control Nexus" Height="720" Width="1280" Background="#11000000">
    <Grid Style="{StaticResource HaloBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,24,0,12">
            <TextBlock Text="ETERNA 3.1" FontSize="28" FontWeight="Bold" Foreground="White" />
            <Rectangle Width="2" Height="32" Fill="{StaticResource AccentRouge}" Margin="16,0" />
            <TextBlock Text="Full Local Autonomy" FontSize="20" Foreground="{StaticResource LuminousGold}" />
        </StackPanel>

        <Border Grid.Row="1" Margin="120" CornerRadius="24" BorderThickness="2" BorderBrush="{StaticResource AccentRouge}" Background="#33000000" Padding="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Spacing="12">
                    <TextBlock Text="Core Nexus" FontSize="26" FontWeight="Bold" Foreground="{StaticResource LuminousGold}" />
                    <Separator Background="{StaticResource AccentRouge}" Height="2" />
                    <StackPanel Orientation="Horizontal" Spacing="24">
                        <StackPanel>
                            <TextBlock Text="CPU" FontSize="18" Foreground="White" />
                            <ProgressBar Minimum="0" Maximum="100" Value="{Binding CoreStatus.CpuUsage}" Height="18" Foreground="{StaticResource HaloBrush}" />
                            <TextBlock Text="{Binding CoreStatus.CpuUsage, StringFormat={}{0:F1}%}" Foreground="{StaticResource LuminousGold}" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="GPU" FontSize="18" Foreground="White" />
                            <ProgressBar Minimum="0" Maximum="100" Value="{Binding CoreStatus.GpuUsage}" Height="18" Foreground="{StaticResource HaloBrush}" />
                            <TextBlock Text="{Binding CoreStatus.GpuUsage, StringFormat={}{0:F1}%}" Foreground="{StaticResource LuminousGold}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,24,0,0">
                        <TextBlock Text="Emotion" FontSize="18" Foreground="White" />
                        <TextBlock Text="{Binding CoreStatus.EmotionLabel}" FontSize="32" FontWeight="SemiBold" Foreground="{StaticResource AccentRouge}" />
                        <TextBlock Text="{Binding CoreStatus.EmotionConfidence, StringFormat={}{0:P0}}" Foreground="{StaticResource LuminousGold}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ModuleStatuses}" Margin="0,24,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="#33FFFFFF" CornerRadius="12" Padding="12" Margin="0,8">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" Width="180" />
                                        <TextBlock Text="{Binding State}" Foreground="{Binding StatusBrush}" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Width="260" Height="260" Fill="#22000000" Stroke="{StaticResource HaloBrush}" StrokeThickness="6" />
                    <Image Source="Assets/logo.png" Width="180" Height="180" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Grid>
            </Grid>
        </Border>

        <TextBlock Grid.Row="2" Text="Local mode â€¢ Named Pipe sync" HorizontalAlignment="Center" Margin="0,18" Foreground="#AAFFFFFF" />
    </Grid>
</Window>
