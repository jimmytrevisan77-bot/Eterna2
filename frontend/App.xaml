<Application x:Class="Eterna.Desktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="PrimaryViolet">#FF5E3CE8</Color>
        <Color x:Key="AccentRouge">#FFDB2147</Color>
        <Color x:Key="LuminousGold">#FFF5C542</Color>
        <LinearGradientBrush x:Key="HaloBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="{StaticResource PrimaryViolet}" Offset="0" />
            <GradientStop Color="{StaticResource AccentRouge}" Offset="0.5" />
            <GradientStop Color="{StaticResource LuminousGold}" Offset="1" />
        </LinearGradientBrush>
        <Style TargetType="Grid" x:Key="HaloBackground">
            <Setter Property="Background">
                <Setter.Value>
                    <RadialGradientBrush GradientOrigin="0.5,0.4" Center="0.5,0.4" RadiusX="0.8" RadiusY="0.8">
                        <GradientStop Color="#22101024" Offset="0" />
                        <GradientStop Color="#FF120A1F" Offset="0.45" />
                        <GradientStop Color="#FF09030F" Offset="0.95" />
                    </RadialGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
